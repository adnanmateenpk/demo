<!DOCTYPE html>
<html>
  <head>
    <title>ECOM - Product List</title>
    
  </head>
  <body>
  	<% if @flash %>
  		<div><%= @flash %></div>
  	<% end %>
    <h2>Product List</h2>
     <a href="/">Main Menu</a><br/>
    <% if session["current_order_id"] %>
      <a href="/order/<%= session["current_order_id"] %>">Shopping Cart </a><br/>
    <% end %>
    <a href="/logout">logout </a><br/>
	<table class="listing" summary="Admin users list">
	  <tr>
      <th>Name</th>
      <th>Price</th>
      <th>Status</th>
      <th>Actions</th>
      </tr>
	  <% @products.each do |product| %>

	 
	  <tr >
      <td><%= product.name %></td>
      <td>$<%= product.price %></td>
      <td><%= (product.status) %></td>
      <td class="actions">
      	<a href="/product/<%= product.id %>"> See Details </a> 
      </td>
   		</tr>
   		<% end %>
    </table>
	
	</div>
    </div>

  </body>
</html>